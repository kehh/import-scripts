#!/bin/bash
P=googlecl
dpkg -s "$P" >/dev/null 2>&1 && {
    echo "$P is installed."
} || {
    echo "$P is not installed. Will attempt to install it for you"
    sudo apt-get install -y "$P"
}
# check for the gdrive binary
# http://stackoverflow.com/questions/592620/check-if-a-program-exists-from-a-bash-script

hash drive 2>/dev/null || {
    echo >&2 "drive is not installed. Will attempt to install it for you from https://github.com/prasmussen/gdrive"
    pushd `dirname "$0"`>/dev/null
    wget -O drive "https://drive.google.com/uc?id=0B3X9GlR6Embnb095MGxEYmJhY2c"
    chmod 775 drive
    popd>/dev/null
}
